<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/White">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@mipmap/search_background"
        android:layout_centerInParent="true" />

    <ImageView
        android:layout_height="100dp"
        app:srcCompat="@drawable/point_main_searchbar_background"
        android:layout_centerInParent="true"
        android:layout_width="270dp" />

    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_centerVertical="false"
        android:layout_centerInParent="true"
        android:layout_width="220dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/point_main_searchbar"
            android:layout_centerVertical="true" />

        <EditText
            android:id="@+id/editText"
            android:textColor="@color/Gray"
            android:layout_alignParentStart="true"
            android:layout_marginStart="40dp"
            android:textSize="14sp"
            android:ems="10"
            android:layout_centerVertical="true"
            android:layout_height="30dp"
            android:layout_width="match_parent"
            android:padding="0dp"
            android:inputType="text"
            android:background="@color/White"
            android:layout_marginEnd="5dp"
            android:text="내용"
            style="@style/LikeRoomTheme.EditText" />

        <TextView
            android:text="이름 또는 전화번호로 검색"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/textView2"
            android:layout_marginStart="40dp"
            android:textColor="@color/LightGray"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:gravity="center_vertical"
            android:layout_marginEnd="5dp"
            android:textSize="12sp" />
    </RelativeLayout>

</RelativeLayout>